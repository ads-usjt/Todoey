{
  "name": "todoey-rest-api",
  "description": "Todoey REST API",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Lucas Souza",
  "scripts": {
    "dev": "export NODE_ENV=development; ts-node-dev --ignore-watch node_modules src/server.ts",
    "start": "export NODE_ENV=production; ts-node-dev src/server.ts",
    "predeploy": "tsc -p .; cp src/package.json ormconfig.js Procfile ./dist",
    "deploy": "gh-pages -d ./dist -b heroku-rest-deploy; rm -rf ./dist",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "pg": "^8.4.2",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "gh-pages": "^3.1.0",
    "sqlite3": "^5.0.0",
    "ts-node-dev": "^1.0.0-pre.65",
    "typescript": "^4.0.3"
  }
}