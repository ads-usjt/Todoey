{
  "name": "todoey-rest-api",
  "description": "Todoey REST API",
  "version": "3.0.0",
  "license": "MIT",
  "author": "Lucas Souza",
  "scripts": {
    "devdb": "ts-node-dev ./node_modules/typeorm/cli.js schema:sync",
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules src/server.ts",
    "predeploy": "tsc -p .; cp package.json ormconfig.js Procfile ./dist",
    "deploy": "gh-pages -d ./dist -b heroku-rest-deploy; rm -rf ./dist",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "start": "node ./src/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.4.2",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.7",
    "gh-pages": "^3.1.0",
    "sqlite3": "^5.0.0",
    "ts-node-dev": "^1.0.0-pre.65",
    "typescript": "^4.0.3"
  }
}
